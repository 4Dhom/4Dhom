    def __init__(self, lokace, text):
        lokace = ["Hrad", "Les", "Les","Les", "Pláž", "Les", "Dům"]
        

    def jdi(self, smer):
        smer = ["Západ", "Jih", "Sever", "Mordor"]
        print("Můžeš jít směrem na {}").format(smer)    